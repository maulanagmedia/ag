<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".penilaian.temp.TempPenilaianActivity"
    android:background="@drawable/baground">
    <RelativeLayout
        android:id="@+id/drawer_button"
        android:layout_width="?attr/actionBarSize"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerInParent="true"
            android:src="@drawable/back" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/drawer_button"
        android:textAlignment="gravity">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="Detail Penilain 360"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:background="#ecf7fd"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:padding="16dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/rv_temp_karyawan"/>
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/rv_temp_karyawan"
                            android:text="Tambah"
                            android:layout_marginTop="@dimen/margin_tiny"
                            android:layout_alignParentRight="true"
                            android:background="@color/colorGreyTransparant"
                            android:id="@+id/btn_tambah_penilaian"/>
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_medium"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Paling Kompeten"
                            android:textColor="#000"
                            android:textSize="12sp" />

                        <LinearLayout
                            android:background="@drawable/bg_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:ignore="UselessParent">
                            <Spinner
                                android:id="@+id/sp_paling_kompeten"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:backgroundTint="#000"
                                android:layout_marginTop="@dimen/margin_tiny" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_medium"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Alasan"
                            android:textColor="#000"
                            android:textSize="12sp" />
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="75dp"
                            android:gravity="top"
                            android:padding="4dp"
                            android:inputType="textMultiLine"
                            android:id="@+id/edt_alasan_kompeten"
                            android:background="#4BFFFFFF"
                            android:textSize="17dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_medium"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Paling Tidak Kompeten"
                            android:textColor="#000"
                            android:textSize="12sp" />

                        <LinearLayout
                            android:background="@drawable/bg_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:ignore="UselessParent">
                            <Spinner
                                android:id="@+id/sp_tidak_kompeten"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:backgroundTint="#000"
                                android:layout_marginTop="@dimen/margin_tiny" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_medium"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Alasan Tidak Kompeten"
                            android:textColor="#000"
                            android:textSize="12sp" />
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="75dp"
                            android:gravity="top"
                            android:padding="4dp"
                            android:background="#4BFFFFFF"
                            android:id="@+id/edt_alasan_tidak_kompeten"
                            android:inputType="textMultiLine"
                            android:textSize="17dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_medium"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Suka"
                            android:textColor="#000"
                            android:textSize="12sp" />
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="75dp"
                            android:gravity="top"
                            android:padding="4dp"
                            android:background="#4BFFFFFF"
                            android:id="@+id/edt_suka"
                            android:inputType="textMultiLine"
                            android:textSize="17dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_medium"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Duka"
                            android:textColor="#000"
                            android:textSize="12sp" />
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="75dp"
                            android:gravity="top"
                            android:padding="4dp"
                            android:background="#4BFFFFFF"
                            android:id="@+id/edt_duka"
                            android:inputType="textMultiLine"
                            android:textSize="17dp"/>
                    </LinearLayout>

                </LinearLayout>

            </ScrollView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:orientation="horizontal">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_batal"
                android:background="#D61A1A"
                android:textColor="#fff"
                android:text="Batal"
                android:layout_marginRight="6dp"
                android:layout_weight="1"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_simpan"
                android:background="#11407C"
                android:textColor="#fff"
                android:text="Simpan"
                android:layout_marginLeft="6dp"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>