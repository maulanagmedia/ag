<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/baground">

    <RelativeLayout
        android:id="@+id/judulTotalTerlambat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/backTotalTerlambat"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:src="@drawable/back" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/backTotalTerlambat"
            android:text="Total Terlambat"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/judulTotalTerlambat"
        android:background="#ecf7fd"
        android:orientation="horizontal"
        android:weightSum="15">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="14"
            android:orientation="vertical"
            android:weightSum="20">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:orientation="vertical"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.8">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true">

                            <TextView
                                android:id="@+id/textPeriode"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:text="Periode :"
                                android:textColor="#000000"
                                android:textSize="20dp" />
                            <TextView
                                android:id="@+id/tanggalPeriode"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/textPeriode"
                                android:layout_centerHorizontal="true"
                                android:text="20-02-2017 s/d 25-05-2017"
                                android:textColor="#000000"
                                android:textSize="20dp"
                                android:textStyle="bold"/>
                        </RelativeLayout>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:background="@drawable/mbunderketotalterlambat"
                    android:orientation="vertical"
                    android:weightSum="4">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true">

                                <TextView
                                    android:id="@+id/textTotalHari"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Total Hari :"
                                    android:textColor="#FFFFFF"
                                    android:textSize="20dp" />

                                <TextView
                                    android:id="@+id/totalHari"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:layout_toRightOf="@+id/textTotalHari"
                                    android:text="4 Hari"
                                    android:textColor="#FFFFFF"
                                    android:textSize="20dp" />
                            </RelativeLayout>
                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true">

                                <TextView
                                    android:id="@+id/textTotalMenit"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Total Menit :"
                                    android:textColor="#FFFFFF"
                                    android:textSize="20dp" />

                                <TextView
                                    android:id="@+id/totalMenit"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:layout_toRightOf="@+id/textTotalMenit"
                                    android:text="02.30 Menit"
                                    android:textColor="#FFFFFF"
                                    android:textSize="20dp" />
                            </RelativeLayout>
                        </RelativeLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="9">

                <LinearLayout
                    android:id="@+id/layoutdatatotalterlambat"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="10">

                        <LinearLayout
                            android:id="@+id/judulListRekapAbsensi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#FFFFFF"
                            android:orientation="horizontal"
                            android:weightSum="12">

                            <RelativeLayout
                                android:id="@+id/layoutharitanggal"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="4"
                                android:background="#2b588b"
                                android:paddingBottom="5dp"
                                android:paddingLeft="@dimen/paddingharitanggal"
                                android:paddingRight="@dimen/paddingharitanggal"
                                android:paddingTop="5dp">

                                <TextView
                                    android:id="@+id/texthari"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:text="Hari /"
                                    android:textColor="#FFFFFF"
                                    android:textSize="@dimen/text" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/texthari"
                                    android:layout_centerHorizontal="true"
                                    android:text="Tanggal"
                                    android:textColor="#FFFFFF"
                                    android:textSize="@dimen/text" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/layoutjammasuk"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="1dp"
                                android:layout_toRightOf="@+id/layoutharitanggal"
                                android:layout_weight="2.5"
                                android:background="#2b588b"
                                android:paddingBottom="5dp"
                                android:paddingLeft="@dimen/paddingjam"
                                android:paddingRight="@dimen/paddingjam"
                                android:paddingTop="5dp">

                                <TextView
                                    android:id="@+id/textjam"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:text="Jam"
                                    android:textColor="#FFFFFF"
                                    android:textSize="@dimen/text" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/textjam"
                                    android:layout_centerHorizontal="true"
                                    android:text="Masuk"
                                    android:textColor="#FFFFFF"
                                    android:textSize="@dimen/text" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/layoutjamkeluar"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="1dp"
                                android:layout_toRightOf="@+id/layoutjammasuk"
                                android:layout_weight="2.5"
                                android:background="#2b588b"
                                android:paddingBottom="5dp"
                                android:paddingLeft="@dimen/paddingjam"
                                android:paddingRight="@dimen/paddingjam"
                                android:paddingTop="5dp">

                                <TextView
                                    android:id="@+id/textjam2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:text="Scan"
                                    android:textColor="#FFFFFF"
                                    android:textSize="@dimen/text" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/textjam2"
                                    android:layout_centerHorizontal="true"
                                    android:text="Masuk"
                                    android:textColor="#FFFFFF"
                                    android:textSize="@dimen/text" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/layouttelat"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="1dp"
                                android:layout_toRightOf="@+id/layoutjamkeluar"
                                android:layout_weight="3"
                                android:background="#2b588b"
                                android:paddingBottom="4.5dp"
                                android:paddingLeft="@dimen/paddingjam"
                                android:paddingRight="@dimen/paddingjam"
                                android:paddingTop="4.5dp">

                                <TextView
                                    android:id="@+id/texttelat"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:text="Telat"
                                    android:textColor="#FFFFFF"
                                    android:textSize="@dimen/text" />

                                <TextView
                                    android:id="@+id/textmenit"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/texttelat"
                                    android:layout_centerHorizontal="true"
                                    android:text="(menit)"
                                    android:textColor="#FFFFFF" />
                            </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/daftarListTotalTerlambat"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/judulListRekapAbsensi">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/titledatarekapabsensi"
                                android:background="#2b588b"
                                android:paddingBottom="2dp"
                                android:paddingLeft="2dp"
                                android:paddingRight="2dp">

                                <ListView
                                    android:id="@+id/listTotalTerlambat"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="#2b588b" />
                            </RelativeLayout>
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5" />
    </LinearLayout>

</RelativeLayout>